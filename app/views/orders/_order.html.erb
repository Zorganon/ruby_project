<div class="col-xs-6 col-md-3 product-box">
    <p>K, you got:</p>
    <p><strong><%= @product.name %></strong></p>
    <div class="thumbnail">
        <%= image_tag(@product.image_url, :class => "thumbnail product-image img img-rounded") %> 
    </div>
    <p><strong>Description: </strong><%= @product.description %></p>
    <p><strong>Price: </strong><span class="glyphicon glyphicon-euro" aria-hidden="true"></span><%= @product.price %></p>
    <p><strong>Email:</strong><%= order.email %></p>
    <p></p>
    <p><%= link_to 'Show', product, :class => 'btn btn-default', :type => 'button' %> 
    <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-default', :type => 'button' %> 
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default', :type => 'button' %></p>
</div>