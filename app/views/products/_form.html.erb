<div class="container">
  <div class="product-box">
      <%= form_for(@product) do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
    
          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="field">
        <%= f.label :name, :class => "field-label" %><br>
        <%= f.text_field :name, :class => "form-field" %>
      </div>
      <div class="field">
        <%= f.label :description, :class => "field-label" %><br>
        <%= f.text_area :description, :class => "form-field" %>
      </div>
      <div class="field">
        <%= f.label :image_url, :class => "field-label" %><br>
        <%= f.text_field :image_url, :class => "form-field" %>
      </div>
      <div class="field">
        <%= f.label :colour, :class => "field-label" %><br>
        <%= f.text_field :colour, :class => "form-field" %>
      </div>
      <div class="field">
        <%= f.label :price, :class => "field-label" %><br>
        <%= f.text_field :price, :class => "form-field" %>
      </div>
      <div class="actions">
        <%= f.submit :class => "submit-label" %>
      </div>
    <% end %>
  </div>
</div>