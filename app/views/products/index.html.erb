<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<div class="row">
    <% @products.each do |product| %>
    <div class="col-lg-3 col-md-6 product-boxes">
      <div class="container">
        <p><h4><%= product.name %></h4></p>
        <%= image_tag(product.image_url, :class => "product-image") %>
        <p><h4>Description: </h4><%= product.description %></p>
        <p><h4>Price: </h4><%= product.price %></p>
        <p><%= link_to 'Show', product %> 
        <%= link_to 'Edit', edit_product_path(product) %> 
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  <% end %>
</div>
<br>
<div class="new_product_link">
  <%= link_to 'New Product', new_product_path %>
</div>
