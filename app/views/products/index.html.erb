<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
<div class="container">
  <div class="row">
    <% cache(cache_key_for_products) do %>
      <%= render @products %>
    <% end %>
  </div>
  <br>
  <div class="new_product_link">
    <%= link_to 'New Product', new_product_path %>
  </div>
  <div class="button">
    <%= link_to 'Back', url_for(:back), :class => 'btn'%>
  </div>
  <div class="admin-entry">
    <%= link_to 'Admin Product Entry', products_admin_path, :class => 'btn' %>
  </div>
</div>