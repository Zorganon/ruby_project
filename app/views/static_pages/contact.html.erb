<h1>Contact Us</h1>
<div class="container">
  <%= flash[:notice] %>
  <%= form_tag("/static_pages/thank_you") do %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= label_tag :name, "Name", :class => "form-label" %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "enter name" %>
      </div>
      <div class="form-group">
        <%= label_tag :email, "Email Address", :class => "form-label" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "enter email" %>
      </div>
      <div class="form-group">
        <%= label_tag :message, "Message", :class => "form-label" %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "enter message" %>
      </div>
    </div>
  </div>
  <%= submit_tag "Send", :class => "submit-label" %>
  <% end %>
</div>
